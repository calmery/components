{
  "author": "calmery <contact@calmery.me>",
  "description": "A React component library for calmery-chan :books:",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "@semantic-release/npm": "7.0.5",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@storybook/addon-actions": "5.3.18",
    "@storybook/addon-docs": "5.3.18",
    "@storybook/addon-knobs": "5.3.18",
    "@storybook/addons": "5.3.18",
    "@storybook/react": "5.3.18",
    "@svgr/webpack": "5.3.1",
    "@types/jest": "25.2.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/react-test-renderer": "16.9.2",
    "@types/terser-webpack-plugin": "2.2.0",
    "@types/webpack": "4.41.21",
    "@types/webpack-merge": "4.1.5",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "babel-loader": "8.1.0",
    "commitizen": "4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "lint-staged": "10.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "react": "16.13.1",
    "react-docgen-typescript-loader": "3.7.2",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "run-script-os": "1.1.1",
    "semantic-release": "17.0.4",
    "terser-webpack-plugin": "2.3.5",
    "ts-jest": "25.3.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-merge": "4.2.2"
  },
  "engines": {
    "node": ">=12.13.0 <13.0.0",
    "npm": ">=6.12.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "ignorePatterns": [
      "!.storybook"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "files": [
    "build"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/**/*.{d,stories}.{ts,tsx}"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/mocks/svgr.ts"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,json,jsx,md,yml}": [
      "npm run lint:prettier"
    ],
    "**/*.{ts,tsx}": [
      "npm run lint:eslint"
    ]
  },
  "main": "build",
  "name": "@calmery-chan/components",
  "peerDependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/changelog",
      "@semantic-release/commit-analyzer",
      "@semantic-release/git",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calmery-chan/components.git"
  },
  "scripts": {
    "build": "rimraf -d build && run-script-os",
    "build:default": "NODE_ENV=production webpack",
    "build:win32": "set NODE_ENV=production webpack",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore --fix . --ext .ts --ext .tsx",
    "lint:prettier": "prettier --write \"**/*.{js,json,jsx,md,yml}\"",
    "prepublishOnly": "npm run build",
    "start": "start-storybook -p 3000",
    "test": "jest --coverage"
  },
  "sideEffects": false,
  "version": "0.0.0"
}
